########################################################################################################################
# uACPI-OS - the acpi part
########################################################################################################################

# Nuke built-in rules and variables.
override MAKEFLAGS += -rR

#-----------------------------------------------------------------------------------------------------------------------
# Directories
#-----------------------------------------------------------------------------------------------------------------------

BUILD_DIR		:= ../build
BIN_DIR			:= $(BUILD_DIR)/bin
OBJ_DIR			:= $(BUILD_DIR)/obj

#-----------------------------------------------------------------------------------------------------------------------
# Sources
#-----------------------------------------------------------------------------------------------------------------------

SRCS 		:= $(shell find . -name '*.asl')

$(BIN_DIR)/kernel.aml: $(SRCS)
	mkdir -p $(@D)
	iasl -p $@ -f kernel.asl

